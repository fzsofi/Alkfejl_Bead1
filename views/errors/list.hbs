{{#extend "scripts"}}
<script src="/js/list.js"></script>
{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Egyetemi feladataim</h1>
</div>

<table class="table table-striped table-hover" id="errorTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Határidő</th>
            <th>Típus</th>
            <th>Részletek</th>
        </tr>   
    </thead>
    <tbody>
        {{#each errors}}
        <tr>
            <td>{{id}}</td>
            <td>{{formatDateTime date}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{dateline}}</td>
            <td>{{location}}</td>
            <td><a href="/errors/edit/{{id}}" class="btn btn-default">Szerkeszt</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/errors/new" class="btn btn-default">Új feladat</a></p>
